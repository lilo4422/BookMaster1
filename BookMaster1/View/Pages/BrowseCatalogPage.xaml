<Page x:Class="BookMaster1.View.Pages.BrowseCatalogPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BookMaster1.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="654" d:DesignWidth="1280"
      Title="BrowseCatalogPage">
    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="2.5*" />
        </Grid.ColumnDefinitions>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="160" />
                <RowDefinition Height="40" />
                <RowDefinition Height="50" />
                <RowDefinition Height="10" />
                <RowDefinition Height="50" />
                <RowDefinition Height="10" />
                <RowDefinition Height="50" />
                <RowDefinition Height="40" />
                <RowDefinition Height="50" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="15" />
                <ColumnDefinition Width="100" />
                <ColumnDefinition Width="20" />
                <ColumnDefinition Width="200" />
                <ColumnDefinition Width="10" />
            </Grid.ColumnDefinitions>
            <Image Grid.ColumnSpan="3" Grid.Column="1" Source="/Resources/Images/logo.png" />
            <TextBlock Grid.Column="1" Grid.Row="2" Text="Title"/>
            <TextBlock Grid.Column="1" Grid.Row="4" Text="Author"/>
            <TextBlock Grid.Column="1" Grid.Row="6" Text="Subject"/>
            <TextBox Name="TitleTB" Grid.Column="3" Grid.Row="2"/>
            <TextBox Name="AuthorTB" Grid.Column="3" Grid.Row="4"/>
            <TextBox Name="SubjectTB" Grid.Column="3" Grid.Row="6"/>
            <Button Grid.Row="8" Grid.Column="3" Name="SearchBTN" Click="SearchBTN_Click">
                <Button.Content>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="29*"/>
                            <RowDefinition Height="20*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="5" />
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="1*" />
                        </Grid.ColumnDefinitions>
                        <Image Grid.Column="1" Source="/Resources/Icons/search.png" Grid.ColumnSpan="3" Margin="0,0,49,0" Grid.RowSpan="2"/>
                        <TextBlock Grid.Column="3" Text="Search" Grid.ColumnSpan="2" Margin="20,13,-19,0" Grid.RowSpan="2" VerticalAlignment="Top"/>
                    </Grid>
                </Button.Content>
            </Button>
        </Grid>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="5" />
                    <RowDefinition Height="50" />
                    <RowDefinition Height="5" />
                </Grid.RowDefinitions>
                <ListView Name="BookAuthorLV" SelectionChanged="BookAuthorLV_SelectionChanged">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Title" Width="420" DisplayMemberBinding="{Binding Title}"/>
                            <GridViewColumn Header="Author" Width="420" DisplayMemberBinding="{Binding AuthorsList}"/>
                        </GridView>
                    </ListView.View>
                </ListView>
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="10" />
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="5" />
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="5" />
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="10" />
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="1">
                        <TextBlock Text="Page"/>
                    </Grid>
                    <Grid Grid.Column="3">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="5"/>
                            <ColumnDefinition Width="90"/>
                            <ColumnDefinition Width="5"/>
                            <ColumnDefinition Width="auto"/>
                        </Grid.ColumnDefinitions>
                        <Button Name="PreviousPageBTN" Content="&lt;" Click="PreviousPageBTN_Click"/>
                        <TextBox Name="PageNumberTB" Grid.Column="2" TextChanged="PageNumberTB_TextChanged"/>
                        <Button Name="NextPageBTN" Grid.Column="4" Content="&gt;"  Click="NextPageBTN_Click"/>
                    </Grid>
                    <Grid Grid.Column="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="5" />
                            <ColumnDefinition Width="auto" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="of"/>
                        <TextBlock Grid.Column="2" Name="PageQuantityTBL"/>
                    </Grid>
                    <Grid Grid.Column="7">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="10" />
                            <ColumnDefinition Width="auto" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Name="BooksQuantityTBL" Text=""/>
                        <TextBlock Grid.Column="2" Text="Books found"/>
                    </Grid>
                </Grid>
            </Grid>
            <Separator Grid.Row="1"/>
            <Grid Name="BookDetailsGrid" Grid.Row="2" Margin="5" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="30" />
                    <ColumnDefinition Width="250" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50" />
                    <RowDefinition Height="10" />
                    <RowDefinition Height="20" />
                    <RowDefinition Height="5" />
                    <RowDefinition Height="15" />
                    <RowDefinition Height="15" />
                    <RowDefinition Height="15" />
                    <RowDefinition Height="5" />
                    <RowDefinition Height="80" />
                    <RowDefinition Height="5" />
                    <RowDefinition Height="20" />
                    <RowDefinition Height="5" />
                    <RowDefinition Height="50"/>
                </Grid.RowDefinitions>
                <Grid Grid.Column="3" Grid.RowSpan="14">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>
                    <ListBox Name="CoverLB">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Image Source="{Binding CoverFile}" HorizontalAlignment="Center"/>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120" />
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="120" />
                        </Grid.ColumnDefinitions>
                        <Button Name="PreviousCoverBTN" Content="&lt;" Click="PreviousCoverBT_Click"/>
                        <Button Name="NextCoverBTN" Content="&gt;" Grid.Column="2" Click="NextCoverBT_Click"/>
                    </Grid>
                </Grid>
                <TextBlock Name="NameBookTBL" Text="{Binding Title}" Grid.Row="0"/>
                <TextBlock Name="AuthorBookTBL" FontSize="15" Text="{Binding Authors}" Grid.Row="2">
                    <Hyperlink Click="Hyperlink_Click"/>
                </TextBlock>
                <TextBlock Name="DateFirstPablishTBL" FontSize="12" Text="{Binding FirstPublishDate}" Grid.Row="4"/>
                <TextBlock Text="Description" FontSize="15" Grid.Row="6"/>
                <TextBlock Name="DesriptionTBL" FontSize="11" VerticalAlignment="Top" Text="{Binding Description}" Grid.Row="8"/>
                <TextBlock Text="Subject" FontSize="15" Grid.Row="10"/>
                <TextBlock Name="SubjectTBL" FontSize="11" VerticalAlignment="Top" Text="{Binding Subjects}" Grid.Row="12"/>
            </Grid>
        </Grid>
    </Grid>
</Page>