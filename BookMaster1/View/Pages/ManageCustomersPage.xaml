<Page x:Class="BookMaster1.View.Pages.ManageCustomersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BookMaster1.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="654" d:DesignWidth="1280"
      Title="ManageCustomersPage">

    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="320" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="20" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="20" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="10" />
                <RowDefinition Height="50" />
                <RowDefinition Height="30" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="50" />
                <RowDefinition Height="40" />
                <RowDefinition Height="50" />
                <RowDefinition Height="200" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="1" Grid.Column="1" Text="Customer ID"/>
            <TextBox Name="CustomerIdTB" Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2" Width="280"/>
            <TextBlock Grid.Row="5" Grid.Column="1" Text="Name"/>
            <TextBox Name="CustomerNameTB" Grid.Row="6"  Grid.Column="1" Grid.ColumnSpan="2" Width="280"/>
            <Button Grid.Row="8" Grid.Column="1" Grid.ColumnSpan="2" Name="SearchCustomerBTN" Click="SearchCustomerBTN_Click">
                <Button.Content>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="29*"/>
                            <RowDefinition Height="20*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="5" />
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="1*" />
                        </Grid.ColumnDefinitions>
                        <Image Grid.Column="1" Source="/Resources/Icons/search.png" Grid.ColumnSpan="3" Grid.RowSpan="2"/>
                        <TextBlock Grid.Column="3" Text="Search" Grid.ColumnSpan="2" Margin="0,15,5,1" Grid.RowSpan="2" VerticalAlignment="Top"/>
                    </Grid>
                </Button.Content>
            </Button>
            <Grid Grid.Row="11" Grid.Column="1" Grid.ColumnSpan="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="130" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="130" />
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" Name="EditCustomerBTN" Content="Edit" Click="EditCustomerBTN_Click"/>
                <Button Grid.Column="2" Name="AddCustomerBTN" Content="Add" Click="AddCustomerBTN_Click"/>
            </Grid>
        </Grid>
        <Grid Grid.Column="1">
            <ListView Name="CutomerLV">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="ID" DisplayMemberBinding="{Binding Id}"/>
                        <GridViewColumn Header="Name" DisplayMemberBinding="{Binding FullName}"/>
                        <GridViewColumn Header="Addres" Width="350" DisplayMemberBinding="{Binding Addres}"/>
                        <GridViewColumn Header="Zip" DisplayMemberBinding="{Binding Zip}"/>
                        <GridViewColumn Header="City" DisplayMemberBinding="{Binding City.Name}"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </Grid>
    </Grid>
</Page>
