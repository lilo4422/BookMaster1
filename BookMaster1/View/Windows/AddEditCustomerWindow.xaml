<Window x:Class="BookMaster1.View.Windows.AddEditCustomer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookMaster1.View.Windows"
        mc:Ignorable="d"
        Title="Add / Edit Customer" SizeToContent="WidthAndHeight"  WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="50" />
            <RowDefinition Height="30" />
            <RowDefinition Height="50" />
            <RowDefinition Height="20" />
            <RowDefinition Height="50" />
            <RowDefinition Height="20" />
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
            <RowDefinition Height="20" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="20" />
            <ColumnDefinition Width="280" />
            <ColumnDefinition Width="40" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="20" />
            <ColumnDefinition Width="280" />
            <ColumnDefinition Width="20" />
        </Grid.ColumnDefinitions>
        <TextBlock Name="IdTBL" Text="ID" Grid.Column="1" Grid.Row="1"/>
        <TextBlock Name="NameTBL" Text="Name" Grid.Column="1" Grid.Row="3"/>
        <TextBlock Name="AddressTBL" Text="Address" Grid.Column="1" Grid.Row="5"/>
        <TextBlock Name="ZipCityTBL" Text="Zip/City" Grid.Column="1" Grid.Row="7"/>
        <TextBox Name="IdTB" Grid.Column="3" Grid.Row="1" Text="{Binding Id}"/>
        <TextBox Name="NameTB" Grid.Column="3" Grid.Row="3"/>
        <TextBox Name="AddressTB" Grid.Column="3" Grid.Row="5"/> 
        <TextBlock Name="PhoneTBL" Text="Phone" Grid.Column="5" Grid.Row="3"/>
        <TextBlock Name="EmailTBL" Text="Email" Grid.Column="5" Grid.Row="5"/>
        <TextBox Name="PhoneTB" Grid.Column="7" Grid.Row="3"/>
        <TextBox Name="EmailTB" Grid.Column="7" Grid.Row="5"/>
        <Grid Grid.Column="3" Grid.Row="7">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100" />
                <ColumnDefinition Width="10" />
                <ColumnDefinition Width="170" />
            </Grid.ColumnDefinitions>
            <TextBox Name="ZipTB" Grid.Column="0"/>
            <TextBox Name="CityTB" Grid.Column="2"/>
        </Grid>
        <Grid Grid.Column="7" Grid.Row="9">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="135" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="135" />
            </Grid.ColumnDefinitions>
            <Button Name="SaveBTN" Grid.Column="0" Content="Save" Click="SaveBTN_Click" />
            <Button Name="Cancel" Grid.Column="2" Content="Cancel" Click="CancelBTN_Click"/>
        </Grid>
    </Grid>
</Window>
